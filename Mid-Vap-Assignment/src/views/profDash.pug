html
    head
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css")
        link(href="https://fonts.googleapis.com/css?family=Pacifico&display=swap" rel="stylesheet")
        link(href="https://fonts.googleapis.com/css?family=Saira+Semi+Condensed&display=swap" rel="stylesheet")
        style  .normal {font-family: 'Saira Semi Condensed', sans-serif;} h1 { font-family: 'Pacifico', cursive;} .cursive { font-family: 'Pacifico',cursive;}
        title Porto
        style .jumbotron { background: rgb(215, 219, 212);background: rgba(162, 182, 185, 0.5);}
    body(style="background-image: url('img/bg2.jpg');")
        div(class="container jumbotron")
            div(class="row")
                h1(class="text-center") Porto
        div(class="container")
            form(action="/" class="text-right")
                input(type="submit" value="Logout" class="btn btn-danger float-right")
            div(class="row jumbotron")
                h2(id='Username' class="cursive") Welcome #{username}
                form(action='/addCourse' class="normal")
                    label Course ID
                    input(type=text class="form form-control" name="courseID")
                    label Course Name
                    input(type=text class="form form-control" name="courseName")
                    br
                    input(type="submit" value="Add Course" class="btn-success btn")
                h3(id='Username' class="cursive") Registered Classes  
                form(action="/delCourseProf" class="normal")
                    table(class="table")
                        each val in display
                            tr
                                th Course-ID #{val.Course}
                                th
                                    input(type="radio" name="delCourse" value=val)

                            each student in val.Students
                                tr
                                    td #{student} 
                    input(type="submit" value="Delete Course" class="btn btn-danger")








        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js")
